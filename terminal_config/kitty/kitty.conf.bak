# BEGIN_KITTY_THEME
# Farin
include current-theme.conf
# END_KITTY_THEME

# Always show tab bar
tab_bar_edge bottom
tab_bar_style powerline
tab_powerline_style slanted
# Reduce tab appearance to just index
tab_title_template "{index}"

# Optional: reduce height
tab_bar_margin_height 0
tab_bar_margin_width 0

# Optional: disable fancy separators
tab_separator " "

# Optional: reduce padding around tab text
tab_padding 0

# Optional: turn off window title (if desired)
active_tab_title_template "{index}"
inactive_tab_title_template "{index}"


window_padding_width 0
window_margin_width 0
window_border_width 0
tab_bar_margin_height 0.0 0.0
tab_bar_margin_width 0.0


font_family FiraCode Nerd Font Mono
bold_font FiraCode Nerd Font Mono Bold
italic_font FiraCode Nerd Font Mono
bold_italic_font FiraCode Nerd Font Mono Bold
font_size 11
